<div>
  <div>
    <h1>
      List of all emails
    </h1>
  </div>
</div>

<hr>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Receiver name
        </th>

        <th>
          Receiver company
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_emails.each do |an_email| %>
      <tr>
        <td>
          <%= an_email.id %>
        </td>

        <td>
          <%= an_email.receiver_name %>
        </td>

        <td>
          <%= an_email.receiver_company %>
        </td>

        <td>
          <%= time_ago_in_words(an_email.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_email.updated_at) %> ago
        </td>

        <td>
          <a href="/emails/<%= an_email.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
